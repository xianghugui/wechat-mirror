/* pages/goods/index.wxss */

page {
  background-color: #f3f3f3;
}

.goods-content {
  /* box-shadow: 1px 0px 1px 0px #f3f3f3; */
  margin-top: 8px;
  font-size: 11px;
  position: relative;
  background-color: #fff;
}

.goods-show {
  width: 100%;
  height: 190rpx;
  position: relative;
  padding: 20rpx 14.5px;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}

.goods-img-div {
  width: 100rpx;
  height: 150rpx;
  text-align: center;
  /* position: absolute;
  top: 22rpx;
  left: 10rpx; */
  overflow: hidden;
  margin-right: 20rpx;
}

.goods-img {
  width: 100%;
  height: 100%;
}

.goods-text {
  height: 150rpx;
  width: calc(100% - 120rpx);
}

.goods-title {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 34rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: rgb(50, 50, 50);
}

.goods-price {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 36rpx;
  color: rgb(255, 162, 0);
  margin-top: 5rpx;
  font-weight: bold;
}

.info-item {
  height: 30rpx;
  line-height: 30rpx;
  margin-top: 5rpx;
  color: #afafaf;
  display: flex;
}

.goods-type, .goods-gender {
  display: inline-block;
  width: 45%;
}

.time {
  width: 55%;
  height: 35rpx;
  line-height: 35rpx;
  overflow: hidden;
}

.icon-content {
  height: 60px;
  width: 750rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1px solid #efede8;
  box-sizing: border-box;
}

.operating{
  width: 40rpx;
  height: 40rpx;
}

.icon>view{
  margin-top: 15rpx;
  color: rgb(50, 50, 50);
}

.add-goods {
  position: fixed;
  width: 98rpx;
  height: 98rpx;
  bottom: 50rpx;
  right: 20rpx;
  z-index: 999;
}

.hasMoreData {
  background-color: #fff;
  text-align: center;
  font-size: 20rpx;
  padding: 10rpx;
  color: #c0c0c0;
  margin-top: 15rpx;
}

.icon{
  width: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  font-size: 24rpx;
}

.shelf{
  color: rgb(75, 194, 201);
}
