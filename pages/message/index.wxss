/* pages/message/index.wxss */

page {
  height: 100%;
  width: 100%;
  background-color: #f3f3f3;
}

.front-cover{
  width: 100%;
  height: auto;
}

.message-box {
  height: 100%;
  width: 100%;
}

.message-content {
  padding: 0rpx 25rpx 25rpx 25rpx;
  box-sizing: border-box;
}

.message-content:first-child {
  padding-top: 25rpx;
}

.message-item {
  width: 100%;
  /* height: 450rpx; */
  padding: 20rpx 20rpx 10rpx 20rpx;
  background-color: #fff;
  box-sizing: border-box;
  overflow: hidden;
}

.message-time {
  /* height: 50rpx; */
  font-size: 26rpx;
  color: rgb(121, 121, 121);
  padding-top: 10rpx;
  line-height: 50rpx;
}

.message-title {
  height: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: rgb(50, 50, 50);
  padding-top: 10rpx;
  line-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.message-text {
  font-size: 32rpx;
  color: rgb(50, 50, 50);
  /* height: 380rpx; */
  line-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 图片 */

.describe-div {
  width: 100%;
  height: 370rpx;
  overflow: hidden;
}

.describe-img {
  width: 100%;
  height: auto;
}

/* 刷新 */

.refresh {
  position: fixed;
  bottom: 30rpx;
  left: calc(50% - 30rpx);
  width: 60rpx;
  height: 60rpx;
  color: #3fc0c5;
  font-size: 60rpx;
  z-index: 999;
  animation: refresh 1.5s linear 0s infinite;
}

@keyframes refresh {
  from {
    transform: rotate(0);
  }

  to {
    transform: rotate(360deg);
  }
}

.no-data-box {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #bbb;
  font-size: 30rpx;
}

.no-data-image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}
