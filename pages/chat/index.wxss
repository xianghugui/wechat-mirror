/* pages/chat/index.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: rgb(243, 243, 242);
}

page, scroll-view, #message-bottom {
  display: flex;
  flex-direction: column;
}

#message-bottom{
  overflow-y: auto;
}

scroll-view, .send_input {
  flex: 1;
}

.send_view {
  border-top: 1px solid rgb(221, 221, 221);
  background-color: rgb(254, 254, 254);
  display: flex;
  flex-basis: 100rpx;
  padding: 15rpx;
  justify-content: space-around;
}

.send-image {
  height: 70rpx;
  margin: 0 28rpx;
  flex: 70rpx 0 1;
}

.send_input {
  height: 70rpx;
  background-color: white;
  border: 1px solid rgb(221, 221, 221);
  border-radius: 35rpx;
  line-height: 70rpx;
  padding: 0 20rpx;
}

.send_button {
  background-color: rgb(66, 200, 209);
  color: white;
  height: 70rpx;
  border-radius: 35rpx;
  line-height: 70rpx;
  padding: 0 40rpx;
  margin: 0 26rpx;
  font-size: 32rpx;
}

.send_button::after {
  border: none;
}

.message_box {
  width: 100%;
  min-height: 80rpx;
  display: flex;
  margin-bottom: 25rpx;
}

.time {
  background-color: rgba(0, 0, 0, 0.2);
  max-height: 36rpx;
  max-width: 300rpx;
  line-height: 36rpx;
  font-size: 26rpx;
  margin: 36rpx auto;
  border-radius: 10rpx;
  display: inline-block;
  word-wrap: break-word;
  text-align: center;
  color: white;
  padding: 0 10rpx;
}

.right {
  justify-content: flex-end;
}

.avatar {
  width: 86rpx;
  height: 86rpx;
  margin: 0 30rpx;
  background: white;
  border-radius: 50%;
}

.message {
  background-color: #a1e85a;
  border-radius: 20rpx;
  display: inline-block;
  min-height: 80rpx;
  max-width: 500rpx;
  word-wrap: break-word;
  line-height: 80rpx;
  text-align: center;
  padding: 0 30rpx;
  position: relative;
}

.triangle-right, .triangle-left{
  width: 0;
  height: 0;
  border-top: 10rpx solid transparent;
  border-bottom: 10rpx solid transparent;
  position: absolute;
  top: 30rpx;
}

.triangle-left{
  left: -14rpx;
  border-right: 15rpx solid white;
}
.triangle-right{
  right: -14rpx;
  border-left: 15rpx solid rgb(66, 200, 209);
}

image {
  width: 200px;
}

.card{
  width: 500rpx;
  height: 200rpx;
  display: flex;
  border-radius: 20rpx;
  background-color: white;
  justify-content: space-between;
  align-items: center;
}

.cardImage{
  height: 180rpx;
}

.cardInfo{
  display: flex;
  flex-direction: column;
}

.cardName{
  width: 300rpx;
  height: 120rpx;
  line-height: 60rpx;
  display: -webkit-box;    
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 2;    
  overflow: hidden; 
}

.cardStatus{
  color: gray;
}

.rightColor{
  background-color: rgb(66, 200, 209);
  color: white;
}

.leftColor{
  background-color: white;
  color: black;
}
