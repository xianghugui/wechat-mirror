/* pages/order/orderInfo/index.wxss */

page {
  background-color: #f3f3f3;
  font-size: 15px;
  margin: 0;
  padding: 0;
}

.page-content {
  width: 100%;
  height: calc(100% - 100rpx);
}

.top-margin {
  height: 30px;
}

/* 订单状态进度条 */

.order_process {
  width: 100%;
  height: 80px;
  display: flex;
  flex-wrap: nowrap;
  padding: 10rpx 10rpx 20rpx 10rpx;
  /* margin-top:30px;  */
}

.process_wrap {
  display: flex;
  flex-direction: column;
  flex: 1;
  align-items: center;
}

.process {
  display: flex;
  align-items: center;
  width: 100%;
}

.process_icon {
  width: 45rpx;
  /* height: 50rpx; */
  font-size: 55rpx;
}

.process_line {
  background: none;
  flex: 1;
  height: 5rpx;
}

.process_name {
  font-size: 22rpx;
  margin-top: 10px;
}

/* 用户收货地址信息栏 */

.user-message {
  width: 100%;
  min-height: 120rpx;
  background-color: #fff;
  padding: 15rpx 14.5px;
  padding-left: 0;
  position: relative;
}

.fa-map-marker {
  font-size: 50rpx;
  height: 90rpx;
  line-height: 90rpx;
  width: 45px;
  text-align: center;
  position: absolute;
  top: calc(50% - 45rpx);
}

.user-content {
  min-height: 90rpx;
  width: calc(100% - 145rpx);
  line-height: 45rpx;
  font-size: 30rpx;
  padding-right: 20rpx;
  padding-bottom: 5rpx;
  margin: auto 0;
  margin-left: 40px;
}

.user-div {
  margin: 0;
  color: #707070;
}

/* 购买商品信息栏 */

.goods-info {
  width: 100%;
  font-size: 11px;
  padding: 0 14.5px;
  position: relative;
  background-color: #fff;
  box-sizing: border-box;
  margin-top: 20rpx;
}

.goods-message1 {
  height: 180rpx;
  padding: 15rpx 0;
  box-sizing: border-box;
  display: flex;
}

.goods-img {
  height: 150rpx;
  width: 100rpx;
  margin: 0;
  margin-right: 20rpx;
  position: relative;
}

.goods-content {
  width: calc(100% - 120rpx);
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-title {
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods-price {
  color: #fea201;
  font-size: 36rpx;
  font-weight: bold;
}

.goods-size {
  color: #c0c0c0;
  font-size: 24rpx;
}

.goods-message2 {
  width: 100%;
  min-height: 75rpx;
  line-height: 45rpx;
  position: relative;
  font-size: 32rpx;
  border-top: 1px solid #f3f3f3;
  padding: 15rpx 0;
  box-sizing: border-box;
}

.goods-message3 {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  position: relative;
  border-top: 1px solid #f3f3f3;
}

/* 订单信息栏 */

.order-info {
  font-size: 28rpx;
  color: #b2b2b2;
  padding: 20rpx 14.5px;
  line-height: 50rpx;
  background-color: #fff;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

/* 订单信息栏 */

.operation {
  height: 100rpx;
  width: 100%;
  background-color: #fff;
  padding-right: 14.5px;
  position: absolute;
  bottom: 0rpx;
}

.fa-weixin {
  height: 90rpx;
  line-height: 90rpx;
  width: 45px;
  text-align: center;
  color: #3ec0c4;
  font-size: 45rpx;
  position: absolute;
  top: calc(50% - 45rpx);
}

.action-area {
  height: 50rpx;
  margin: 25rpx 0;
  width: 60%;
  float: right;
}

.action-item {
  height: 50rpx;
  border-radius: 30rpx;
  background-color: white;
  line-height: 50rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  text-align: center;
  font-size: 26rpx;
  float: right;
  margin-right: 14.5px;
  overflow: hidden;
}

.marker {
  width: 40rpx;
  height: 45rpx;
  position: absolute;
  top: calc(50% - 22.5rpx);
  left: 25rpx;
}

.close {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  color: #888;
  font-size: 40rpx;
}

.content-box {
  display: flex;
  justify-content: center;
  margin: 20rpx 0;
}

.content-box > view:first-child {
  flex-basis: 160rpx;
  color: #888;
}

.content-box > view:last-child {
  flex: 1;
  color: #353535;
}

.comment {
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: column;
  width: 100%;
  border-radius: 30rpx 30rpx 0 0;
  padding: 60rpx 50rpx 100rpx 50rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.images > image {
  width: 150rpx;
  height: 210rpx;
  float: left;
  margin: 5rpx;
}

.user-name, .user-phone {
  display: inline-block;
}

.user-phone {
  float: right;
}
