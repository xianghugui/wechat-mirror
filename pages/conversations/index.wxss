/* pages/conversation/index.wxss */

page{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: rgb(243, 243, 243);
}

.userInfo{
  width: 760rpx;
  height: 180rpx;
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: white;
}

.info{
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-around;
}

.info-top, .info-bottom{
  display: flex;
  justify-content: space-between;
}

.name{
  font-size: 38rpx;
  color: rgb(50, 50, 50);
}

.time, .message{
  font-size: 30rpx;
  color: rgb(97, 97, 97);
}

.avatar{
  height: 130rpx;
  width: 130rpx;
  border-radius: 70rpx;
  margin-right: 30rpx;
}

.remind{
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  background-color: red;
  font-size: 26rpx;
  line-height: 45rpx;
  text-align: center;
  color: white;
}

.no-data-box{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #bbbbbb;
  font-size: 30rpx;
}

.no-data-image{
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}