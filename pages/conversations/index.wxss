/* pages/conversation/index.wxss */

page, scroll-view, movable-area{
  width: 100%;
  height: 100%;
  background-color: rgb(243, 243, 243);
}

.conversation{
  width: 950rpx;
  height: 180rpx;
  display: flex;
  position: static;
}

.userInfo{
  width: 750rpx;
  height: 180rpx;
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: white;
}

.info{
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-around;
}

.info-top, .info-bottom{
  display: flex;
  justify-content: space-between;
}

.name{
  font-size: 38rpx;
  color: rgb(50, 50, 50);
}

.time, .message{
  font-size: 30rpx;
  color: rgb(97, 97, 97);
}

.avatar{
  height: 140rpx;
  width: 140rpx;
  border-radius: 70rpx;
  margin-right: 60rpx;
}

.remind{
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  background-color: red;
  font-size: 26rpx;
  line-height: 45rpx;
  text-align: center;
  color: white;
}

.delete{
  width: 200rpx;
  height: 180rpx;
  background: red;
  color: white;
  font-size: 45rpx;
  line-height: 180rpx;
  text-align: center;
}